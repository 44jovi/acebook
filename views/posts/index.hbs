<h1>Timeline</h1>

<div class="container text-center">
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <p class="card-text">Test</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>
{{! all posts }}
<ul class="posts">
  {{#each posts}}
    {{! a post }}
    <ul id={{this._id}} class="post">
      <li><img
          class="author-post-image"
          src="{{formatImage
            this.author.image.contentType
            this.author.image.data
          }}"
        /></li>
      <li class="post-content">{{this.message}}</li>
      <li class="post-author">By {{this.author.name}}</li>
      <li class="post-date">On {{formatDate this.createdAt}}</li>
      <li class="likeCount">{{formatLikesNumber this.like.length}}</li>
      <form class="like" action="/posts/like" method="post">
        <input class="postid" type="hidden" value={{this._id}} name="postid" />
        <input class="submit" type="submit" value="like" />
      </form>
      {{! all comments }}
      <li class="comments">
        <p>Comments</p>
        {{#each this.comments}}
          {{! a comment }}
          <ul id={{this.id}} class="comment">
            <li><img
                class="author-comment-image"
                src="{{formatImage
                  this.author.image.contentType
                  this.author.image.data
                }}"
              /></li>
            <li class="comment-content">{{this.message}}</li>
            <li class="comment-author">By {{this.author.name}}</li>
            <li class="comment-date">On {{formatDate this.createdAt}}</li>
          </ul>
        {{/each}}
      </li>
      <form class="comment-form" action="/posts/comments" method="post">
        <input class="postid" type="hidden" value={{this._id}} name="postid" />
        <input class="comment-input" name="content" required />
        <input class="submit-comment" type="submit" value="comment" />
      </form>
    </ul>
  {{/each}}
</ul>