<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
    <li>
      <div class="post">
        <ul>
          <li><img class="author-post-image" src="{{formatPostAuthorImage this.author.image.contentType this.author.image.data}}"/></li>
          <li>{{this.author.name}}</li>
          <li>{{this.createdAt}}</li>
          <li>{{this.message}}</li>
          <li class="likeCount">{{formatLikesNumber this.like.length}}</li>
          <form class="like" action="/posts/like" method="post">
            <input
              class="postid"
              type="hidden"
              value={{this._id}}
              name="postid"
            />
            <input class="submit" type="submit" value="like" />
          </form>
        </ul>
      </div>
    </li>
  {{/each}}
</ul>