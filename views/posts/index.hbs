<h1>Timeline</h1>
{{! all posts }}
<ul class="posts">
  {{#each posts}}
    {{! a post }}
    <ul id={{this._id}} class="post">
      <li><img
          class="author-post-image"
          src="{{formatImage
            this.author.image.contentType
            this.author.image.data
          }}"
        /></li>
      <li class="post-content">{{this.message}}</li>
      <li class="post-author">By {{this.author.name}}</li>
      <li class="post-date">On {{this.createdAt}}</li>
      <li class="likeCount">{{formatLikesNumber this.like.length}}</li>
      <form class="like" action="/posts/like" method="post">
        <input class="postid" type="hidden" value={{this._id}} name="postid" />
        <input class="submit" type="submit" value="like" />
      </form>
      {{! all comments }}
      <li class="comments">
        <p>Comments</p>
        {{#each this.comments}}
          {{! a comment }}
          <ul id={{this.id}} class="comment">
            <li><img
                class="author-comment-image"
                src="{{formatImage
                  this.author.image.contentType
                  this.author.image.data
                }}"
              /></li>
            <li class="comment-content">{{this.message}}</li>
            <li class="comment-author">By {{this.author.name}}</li>
            <li class="comment-date">On {{this.createdAt}}</li>
          </ul>
        {{/each}}
      </li>
      <form class="comment-form" action="/posts/comments" method="post">
        <input class="postid" type="hidden" value={{this._id}} name="postid" />
        <input class="comment-input" name="content" required />
        <input class="submit-comment" type="submit" value="comment" />
      </form>
    </ul>
  {{/each}}
</ul>