<div class="container text-center">
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
      <form id="new-user-form" action="/users" method="post">
      <div class="mb-3">
          <label for="name" class="form-label" value="">Name</label>
          <input type="name" name="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="John Smith">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label" value="">Email address</label>
          <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="name@example.com">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label" value="">Password</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary" id="submit">Submit</button>
      </form>
    </div>
    <div class="col">
    </div>
  </div>
</div>
