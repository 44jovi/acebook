<h1>Profile Page</h1>
<div class="user">
  <img
    id="profile-image"
    src="{{formatImage user.image.contentType user.image.data}}"
  />
  <h3 id="user-name">{{user.name}}</h3>
  {{#if loggedIn}}
    <form class="add-friend-form" action="/friends/request" method="post">
      <input
        class="requestee-id"
        type="hidden"
        value="{{user._id}}"
        name="requestee"
      />
      {{#if isPending}}
        <input class="already-fiends-button" type="submit" value="Your friend request is still pending" disabled>
      {{else if isFriends}}
        <input class="already-fiends-button" type="submit" value="You are friends with {{user.name}} ðŸŽ‰" disabled>
      {{else}}
        <input class="add-friend-button" type="submit" value="Add Friend" />
      {{/if}}
    </form>
  </div>
  {{/if}}
<div>
  {{#if hasFriends}}
    <h3>Friends</h3>
    {{#each user.friends}}
      <li><a href="/users/{{this._id}}">{{this.name}}</a></li>
      <li><img
          class="friend-profile-image"
          src="{{formatImage this.image.contentType this.image.data}}"
        /></li>
    {{/each}}
  {{/if}}
</div>