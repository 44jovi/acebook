<h1>Images page</h1>
<ul class="user">
  <img src="{{user.image}}" />
  <li>{{user.name}}</li>
  <li>{{user.email}}</li>
</ul>

<h3>Upload new image</h3>
<form action="/settings" enctype="multipart/form-data" method="post">
  <div class="form-group">
    <input type="file" class="form-control-file" name="uploadedImage" />
    <input
      type="text"
      class="form-control"
      placeholder="Text note for image"
      name="textNote"
    />
    <input type="submit" value="Upload avatar" class="btn btn-default" />
  </div>
</form>